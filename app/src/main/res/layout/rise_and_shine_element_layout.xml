<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageview"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:src="@drawable/test_image"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"/>

        <ImageView
            android:id="@+id/result_view"
            android:src="@drawable/ic_mood_black_48dp"
            android:visibility="gone"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:tint="#0000ff"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="125dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/imageview"
            android:layout_marginTop="15dp"
            android:id="@+id/divider"
            android:background="@android:color/darker_gray"/>

        <Button android:id="@+id/isFriendButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="20dp"
            style="?android:attr/borderlessButtonStyle"
            android:drawableLeft="@drawable/ic_done"
            android:drawablePadding="6dp"
            android:text="Друг"
            android:textColor="@color/ok"
            android:layout_below="@+id/divider"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"/>

        <Button android:id="@+id/isNotFriendButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="15dp"
            style="?android:attr/borderlessButtonStyle"
            android:drawableLeft="@drawable/ic_block"
            android:drawablePadding="6dp"
            android:text="Не похож"
            android:textColor="@color/not_ok"
            android:layout_below="@+id/divider"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>